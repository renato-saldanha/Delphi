unit View.Principal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.ExtCtrls, Vcl.DBCtrls, Vcl.Grids, Vcl.DBGrids,

  Controller.Interfaces;

type
  TPrincipal = class(TForm)
    DBGrid: TDBGrid;
    DBNavigator1: TDBNavigator;
    procedure FormCreate(Sender: TObject);
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
    FController: IController;
    FDscGrid: TDataSource;
    procedure DataSourceConfig;
    procedure SetDataSources;
  public
    { Public declarations }
  end;

var
  Principal: TPrincipal;

implementation

uses
  Controller;

{$R *.dfm}

procedure TPrincipal.FormCreate(Sender: TObject);
begin
  ReportMemoryLeaksOnShutdown := True;
  FController := TController.New;
  FController.Connections.FireDac;
  DataSourceConfig();
  SetDataSources();
end;

procedure TPrincipal.FormShow(Sender: TObject);
begin
//
end;

procedure TPrincipal.DataSourceConfig;
begin
  FDscGrid          := TDataSource.Create(Self);
  FDscGrid.DataSet  := FController.Connections.FireDac.Open('SELECT * FROM usuarios');
end;

procedure TPrincipal.SetDataSources;
begin
  DBGrid.DataSource       := FDscGrid;
  DBNavigator1.DataSource := FDscGrid;
end;

end.
